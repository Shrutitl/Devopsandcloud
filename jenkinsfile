pipeline {
  agent any
  tools {
    maven 'Maven-3.6.3'
    jdk 'open-jdk17'
  }

 environment {
    SONAR_CLOUDOBJ = credentials('SONAR-KEY')
 }

stages {
     stage('Repo Scan using Sonarcloud'){
         steps {
          env.SONAR-KEY = "${SONAR_CLOUDOBJ_PSW}"
          sh "mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -D sonar.projectKey=Shrutitl_Devopsandcloud"
         }
       }

    stage('Pet clinic build using maven') {
      steps {
        script {
            sh "mvn clean"
            sh "mvn compile"
            sh "mvn package"
          }
      }
    } 
   }
 }
